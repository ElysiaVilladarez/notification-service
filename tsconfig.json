{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/functions/*": ["src/functions/*"],
      "@/models/*": ["src/models/*"],
      "@/utils/*": ["src/utils/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/config/*": ["env/*"],
      "@/tests/*": ["tests/*"],
      "@/functions": ["src/functions"],
      "@/models": ["src/models"],
      "@/utils": ["src/utils"],
      "@/interfaces": ["src/interfaces"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "env/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 